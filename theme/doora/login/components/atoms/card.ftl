<#macro kw content="" footer="" header="">
  <div class="bg-white py-12 px-14 rounded-xl space-y-6 animate__animated animate__zoomIn">
    <#if header?has_content>
      <div class="space-y-4">
        ${header}
      </div>
    </#if>
    <#if content?has_content>
      <div class="space-y-4">
        ${content}
      </div>
    </#if>
    <#if footer?has_content>
      <div class="space-y-4">
        ${footer}
      </div>
    </#if>
  </div>
</#macro>
